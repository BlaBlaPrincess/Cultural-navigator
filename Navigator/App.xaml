<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigator.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="TextColor">White</Color>
            <Color x:Key="PrimaryLight">#616161</Color>
            <Color x:Key="PrimaryMedium">#333333</Color>
            <Color x:Key="PrimaryDark">#1d1d1d</Color>
            <Color x:Key="Accent1">#d53369</Color>
            <Color x:Key="Accent1Dark">#9f3560</Color>
            <Color x:Key="Accent2">#cbad6d</Color>
            <LinearGradientBrush x:Key="AngularGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource Accent1}" Offset="0"/>
                <GradientStop Color="{StaticResource Accent2}" Offset="1"/>
            </LinearGradientBrush>
            
            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryMedium}"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>